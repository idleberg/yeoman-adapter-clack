{
	"name": "yeoman-adapter-clack",
	"version": "0.1.2",
	"description": "A Yeoman adapter that replaces Inquirer with Clack as the default prompt library",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/yeoman-adapter-clack.git"
	},
	"keywords": [
		"yeoman-adapter",
		"clack",
		"prompts",
		"yeoman"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs"
		}
	},
	"engines": {
		"node": ">=20.19.0"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "concurrently --prefix-colors blue,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"test": "#vitest run"
	},
	"dependencies": {
		"@yeoman/adapter": "^4.0.1",
		"yeoman-generator": "^7.5.1"
	},
	"devDependencies": {
		"@clack/prompts": "^1.0.0",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@e18e/cli": "^0.3.1",
		"@idleberg/configs": "^0.4.1",
		"@types/node": "^24.10.0",
		"@vitest/coverage-v8": "^4.0.18",
		"concurrently": "^9.2.1",
		"np": "^11.0.1",
		"tsdown": "^0.20.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18",
		"yeoman-environment": "^5.1.2"
	},
	"peerDependencies": {
		"@clack/prompts": "^0.11.0"
	},
	"packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
